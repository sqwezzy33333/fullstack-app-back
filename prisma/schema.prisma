generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int    @id @default(autoincrement())
  login         String @unique
  password      String
  forName       String
  lastName      String
  createdTasks  Task[] @relation(name: "creator")
  assignedTasks Task[] @relation(name: "assignee")
}

model Task {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  createdAt   DateTime @default(now())
  date        DateTime
  creator     User     @relation(name: "creator", fields: [creatorId], references: [id])
  creatorId   Int
  assignee    User?    @relation(name: "assignee", fields: [assigneeId], references: [id])
  assigneeId  Int?
}

model Status {
  id    Int    @id @default(autoincrement())
  name  String
  color String
}
